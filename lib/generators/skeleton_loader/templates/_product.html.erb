<div class="rounded-lg shadow-sm overflow-hidden w-full mx-auto"
     style="width:<%= @width %>;
       height:<%= @height %>;
       margin:<%= @margin %>;
       border-radius:<%= @border_radius %>;
       <%= "border: #{@border_width} solid #{@border_color};" if @border_color.present? %>;
     ">

  <div class="flex flex-col"
       style="animation-duration:<%= @animation_duration %>;">
    <div class="h-full">
      <div></div>
    </div>

    <div class="overflow-hidden bg-gray-300 h-64 w-full <%= @animation_enabled ? " #{@animation_type}" : '' %>"
         style="background-color:<%= @background_color %>;
         ">
    </div>

    <div class="p-4 space-y-3">
      <div class="flex justify-between items-center">
        <div class="w-full space-y-3">
          <div class="overflow-hidden h-5 bg-gray-300 rounded w-1/2 <%= @animation_enabled ? " #{@animation_type}" : '' %>"
               style="background-color:<%= @background_color %>;
                 border-radius:<%= @border_radius %>;">
          </div>

          <div class="overflow-hidden h-3 bg-gray-300 rounded w-2/3 <%= @animation_enabled ? " #{@animation_type}" : '' %>"
               style="background-color:<%= @background_color %>;
                 border-radius:<%= @border_radius %>;">
          </div>
        </div>
        <div class="overflow-hidden h-6 bg-gray-300 rounded w-1/4 <%= @animation_enabled ? " #{@animation_type}" : '' %>"
             style="background-color:<%= @background_color %>;
               border-radius:<%= @border_radius %>;">
        </div>
      </div>
    </div>
  </div>
</div>
